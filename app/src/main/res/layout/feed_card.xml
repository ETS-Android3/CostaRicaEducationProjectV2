<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/parent_layout_feed"
    android:padding="8dp"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:padding="10dp"
        android:background="@color/colorPrimary"
        app:strokeWidth="1dp"
        app:strokeColor="#97A2A2"
        app:cardElevation="0dp"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/colorPrimary"
            android:padding="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textSize="20dp"
                android:textColor="#fff"
                android:id="@+id/title_feed"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Subtext"
                android:textColor="#fff"
                android:layout_below="@+id/title_feed"
                android:id="@+id/subtext_feed"
                android:textSize="12dp"
                android:layout_marginBottom="10dp"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Name"
                android:textColor="#fff"
                android:layout_alignParentBottom="true"
                android:textSize="12dp"
                android:id="@+id/name_feed"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="12dp"
                android:text="Date"
                android:textColor="#fff"
                android:layout_alignParentBottom="true"
                android:textSize="12dp"
                android:id="@+id/date_feed"
                android:layout_toRightOf="@+id/name_feed"
                />

        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>